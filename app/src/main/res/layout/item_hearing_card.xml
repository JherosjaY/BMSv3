<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/electric_blue"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Type -->
        <TextView
            android:id="@+id/tvHearingType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hearing Type"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Hearing Date -->
        <TextView
            android:id="@+id/tvHearingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Jan 01, 2024 10:30 AM"
            android:textColor="@color/electric_blue"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- Location -->
        <TextView
            android:id="@+id/tvHearingLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Location"
            android:textColor="@color/electric_blue"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- Notes -->
        <TextView
            android:id="@+id/tvHearingNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="6dp" />

        <!-- Scheduled By -->
        <TextView
            android:id="@+id/tvScheduledBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scheduled by: Officer"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:layout_marginTop="6dp" />

        <!-- Scheduled Date -->
        <TextView
            android:id="@+id/tvScheduledDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jan 01, 2024 10:30 AM"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
