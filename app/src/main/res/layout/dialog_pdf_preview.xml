<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/dialog_background"
    app:strokeColor="@color/electric_blue"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dialog_background">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:background="@color/primary_dark_blue">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PDF Preview"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnClosePreview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:scaleType="centerInside"
                android:tint="@color/white"
                android:contentDescription="Close" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/electric_blue"
            android:alpha="0.3" />

        <!-- ScrollView for PDF Preview (White Paper Format) -->
        <ScrollView
            android:id="@+id/scrollPdfPreview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/background_secondary"
            android:padding="12dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- White Paper Container (PDF Content) -->
                <LinearLayout
                    android:id="@+id/pdfContentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="24dp">

                    <!-- Header - Centered -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BLOTTER REPORT"
                            android:textColor="@color/primary_dark_blue"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <View
                            android:layout_width="80dp"
                            android:layout_height="2dp"
                            android:background="@color/electric_blue"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- Case Information Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CASE INFORMATION"
                            android:textColor="@color/electric_blue"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@android:color/white"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tvPreviewCaseNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Case Number: BLT-0000000001"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Status:"
                                android:textColor="@color/electric_blue"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvPreviewStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Assigned"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Date Filed:"
                                android:textColor="@color/electric_blue"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvPreviewDateFiled"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nov 25, 2025"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="12dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- Complainant Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="COMPLAINANT INFORMATION"
                            android:textColor="@color/electric_blue"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@android:color/white"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tvPreviewComplainantName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Name: Juan Dela Cruz"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/tvPreviewComplainantContact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Contact: 09123456789"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/tvPreviewComplainantAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Address: N/A"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Incident Details Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="INCIDENT DETAILS"
                            android:textColor="@color/electric_blue"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@android:color/white"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tvPreviewIncidentType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Type: Criminal Threats"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/tvPreviewIncidentDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Date: Nov 25, 2025"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/tvPreviewIncidentTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Time: 11:27 AM"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/tvPreviewIncidentLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Location: ACUC"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Narrative Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="NARRATIVE"
                            android:textColor="@color/electric_blue"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@android:color/white"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tvPreviewNarrative"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Narrative text goes here"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Respondent Information Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="RESPONDENT INFORMATION"
                            android:textColor="@color/electric_blue"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@android:color/white"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tvPreviewRespondentName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Name: Juan Dela Cruz"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/tvPreviewRespondentAlias"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Alias: N/A"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/tvPreviewRespondentAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Address: N/A"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/tvPreviewRespondentContact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Contact: 09123456789"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/tvPreviewAccusation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Accusation: N/A"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/tvPreviewRelationship"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Relationship: N/A"
                                android:textColor="#000000"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Evidence Section with Images/Videos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EVIDENCE ATTACHMENTS"
                            android:textColor="@color/electric_blue"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <!-- Images Section -->
                        <LinearLayout
                            android:id="@+id/layoutImagesSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="16dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Images"
                                android:textColor="#666666"
                                android:textSize="11sp"
                                android:layout_marginBottom="8dp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvImagesPreview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="100dp"
                                android:orientation="horizontal"
                                android:scrollbars="horizontal" />
                        </LinearLayout>

                        <!-- Videos Section -->
                        <LinearLayout
                            android:id="@+id/layoutVideosSection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Videos"
                                android:textColor="#666666"
                                android:textSize="11sp"
                                android:layout_marginBottom="8dp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvVideosPreview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="100dp"
                                android:orientation="horizontal"
                                android:scrollbars="horizontal" />
                        </LinearLayout>

                        <!-- No Evidence Message -->
                        <TextView
                            android:id="@+id/tvNoEvidence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No evidence attachments"
                            android:textColor="#999999"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:padding="16dp"
                            android:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/electric_blue"
            android:alpha="0.3" />

        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:spacing="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSharePdf"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Share"
                android:textColor="@color/white"
                android:textSize="16sp"
                style="@style/Widget.MaterialComponents.Button"
                app:backgroundTint="@color/electric_blue"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_share"
                app:iconGravity="textStart"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSavePdf"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="16sp"
                style="@style/Widget.MaterialComponents.Button"
                app:backgroundTint="@color/electric_blue"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_save"
                app:iconGravity="textStart"
                app:iconTint="@color/white" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
