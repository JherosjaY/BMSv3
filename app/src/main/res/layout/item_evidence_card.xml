<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/electric_blue"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Thumbnail -->
        <ImageView
            android:id="@+id/ivEvidenceThumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="Evidence thumbnail"
            android:background="@drawable/dialog_rounded_corners"
            android:layout_marginEnd="12dp" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start">

            <!-- Title -->
            <TextView
                android:id="@+id/tvEvidenceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evidence Title"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Type Badge -->
            <TextView
                android:id="@+id/tvEvidenceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHOTO"
                android:textColor="@color/electric_blue"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:background="@drawable/badge_background" />

            <!-- Description -->
            <TextView
                android:id="@+id/tvEvidenceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <!-- Collected By -->
            <TextView
                android:id="@+id/tvCollectedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Collected by: Officer Name"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:layout_marginTop="2dp" />

            <!-- Date -->
            <TextView
                android:id="@+id/tvCollectionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 01, 2024 10:30 AM"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
