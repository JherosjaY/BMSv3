<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">

    <!-- Preview Image -->
    <ImageView
        android:id="@+id/ivFilePreview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:background="@drawable/dialog_rounded_corners"
        android:contentDescription="File preview" />

    <!-- File Type Badge -->
    <TextView
        android:id="@+id/tvFileType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“· Photo"
        android:textColor="@color/electric_blue"
        android:textSize="10sp"
        android:layout_marginTop="4dp"
        android:gravity="center" />

    <!-- File Name -->
    <TextView
        android:id="@+id/tvFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="file.jpg"
        android:textColor="@color/text_secondary"
        android:textSize="9sp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1" />
</LinearLayout>
