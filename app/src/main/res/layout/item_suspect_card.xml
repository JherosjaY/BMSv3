<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/electric_blue"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Name -->
        <TextView
            android:id="@+id/tvSuspectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suspect Name"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvSuspectStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Wanted"
            android:textColor="@color/electric_blue"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:background="@drawable/badge_background" />

        <!-- Contact -->
        <TextView
            android:id="@+id/tvSuspectContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž Contact Info"
            android:textColor="@color/electric_blue"
            android:textSize="12sp"
            android:layout_marginTop="6dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvSuspectDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="6dp" />

        <!-- Identified By -->
        <TextView
            android:id="@+id/tvIdentifiedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Identified by: Officer"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:layout_marginTop="6dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/tvIdentifiedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jan 01, 2024 10:30 AM"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
